#!/bin/bash

# Pre-commit hook to ensure version consistency and latest changes
echo "Pulling latest changes..."

# Pull latest changes to ensure we're up to date
git pull --rebase

echo "Checking version consistency..."

# Run version sync to ensure all packages have the same version
node scripts/version.js sync

# Add any modified package.json files to the commit
git add **/package.json

echo "âœ… Version consistency ensured and latest changes pulled"
